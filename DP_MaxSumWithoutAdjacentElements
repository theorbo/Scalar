public class Solution {
int[] dp;
  public int adjacent(int[][] A) {
    int n = A[0].length - 1;
    dp = new int[n+1];
    for (int i = 0; i <= n; i++) {
      dp[i] = -1;
    }
    return Math.max(getMaxSum(A, n), getMaxSum(A, n - 1));

  }
  private int getMaxSum(int[][] A, int n) {
    if (n < 0) {
      return 0;
    }
    if (dp[n] != -1) {
      return dp[n];
    }
    dp[n] = Math.max(A[0][n], A[1][n]) + Math.max(getMaxSum(A, n - 2), getMaxSum(A, n - 3));
    return dp[n];
  }
}
